<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @RenderSection("head", false);
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Wams Video Library", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        free access / no login
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Assets", "Index", "Assets")</li>
                            <li>@Html.ActionLink("Jobs", "Index", "Jobs")</li>
                            <li>@Html.ActionLink("Procs", "Index", "MediaProcessors")</li>
                            <li>@Html.ActionLink("Locators", "Locators", "Home")</li>
                            <li>@Html.ActionLink("~ RESET ~", "Reset", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>@DateTime.Now.Year - Use freely as you wish. at your own risk</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
